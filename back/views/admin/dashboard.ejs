<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Panel de Administración - Papota Gym</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">
                <i class="bi bi-shield-lock"></i> Panel de Administración - Papota Gym
            </a>
            <div class="d-flex">
                <span class="navbar-text text-light me-3">
                    <i class="bi bi-person-circle"></i> <%= usuario.nombre %>
                </span>
                <a href="/admin/logout" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 bg-light sidebar">
                <div class="list-group list-group-flush">
                    <a href="/admin/dashboard" class="list-group-item list-group-item-action active">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                    <a href="/admin/producto/nuevo" class="list-group-item list-group-item-action">
                        <i class="bi bi-plus-circle"></i> Nuevo Producto
                    </a>
                </div>
            </div>

            <!-- Contenido Principal -->
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><i class="bi bi-box-seam"></i> Gestión de Productos</h2>
                    <a href="/admin/producto/nuevo" class="btn btn-success">
                        <i class="bi bi-plus-lg"></i> Agregar Producto
                    </a>
                </div>

                <!-- Mensajes de éxito/error -->
                <% if (typeof mensaje !== 'undefined' && mensaje) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= mensaje %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Tabla de Suplementos -->
                <div class="card mb-4">
                    <div class="card-header bg-primary text-white">
                        <h4 class="mb-0"><i class="bi bi-capsule"></i> Suplementos</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Imagen</th>
                                        <th>Nombre</th>
                                        <th>Marca</th>
                                        <th>Precio</th>
                                        <th>Cantidad (gr/ml)</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (suplementos.length === 0) { %>
                                        <tr>
                                            <td colspan="8" class="text-center text-muted">
                                                No hay suplementos registrados
                                            </td>
                                        </tr>
                                    <% } else { %>
                                        <% suplementos.forEach(producto => { %>
                                            <tr>
                                                <td><%= producto.id %></td>
                                                <td>
                                                    <% if (producto.imagen) { %>
                                                        <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>" 
                                                             style="width: 50px; height: 50px; object-fit: cover;">
                                                    <% } else { %>
                                                        <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                                                    <% } %>
                                                </td>
                                                <td><%= producto.nombre %></td>
                                                <td><%= producto.marca %></td>
                                                <td>$<%= producto.precio.toFixed(2) %></td>
                                                <td><%= producto.cantidad_gramos_ml %> gr/ml</td>
                                                <td>
                                                    <% if (producto.activo) { %>
                                                        <span class="badge bg-success">Activo</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">Inactivo</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/admin/producto/editar/<%= producto.id %>" 
                                                           class="btn btn-sm btn-warning" title="Editar">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <% if (producto.activo) { %>
                                                            <button type="button" class="btn btn-sm btn-danger" 
                                                                    onclick="cambiarEstado(<%= producto.id %>, false)"
                                                                    title="Desactivar">
                                                                <i class="bi bi-x-circle"></i>
                                                            </button>
                                                        <% } else { %>
                                                            <button type="button" class="btn btn-sm btn-success" 
                                                                    onclick="cambiarEstado(<%= producto.id %>, true)"
                                                                    title="Activar">
                                                                <i class="bi bi-check-circle"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Tabla de Pesas -->
                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h4 class="mb-0"><i class="bi bi-award"></i> Pesas</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Imagen</th>
                                        <th>Nombre</th>
                                        <th>Marca</th>
                                        <th>Precio</th>
                                        <th>Peso (kg)</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (pesas.length === 0) { %>
                                        <tr>
                                            <td colspan="8" class="text-center text-muted">
                                                No hay pesas registradas
                                            </td>
                                        </tr>
                                    <% } else { %>
                                        <% pesas.forEach(producto => { %>
                                            <tr>
                                                <td><%= producto.id %></td>
                                                <td>
                                                    <% if (producto.imagen) { %>
                                                        <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>" 
                                                             style="width: 50px; height: 50px; object-fit: cover;">
                                                    <% } else { %>
                                                        <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                                                    <% } %>
                                                </td>
                                                <td><%= producto.nombre %></td>
                                                <td><%= producto.marca %></td>
                                                <td>$<%= producto.precio.toFixed(2) %></td>
                                                <td><%= producto.peso %> kg</td>
                                                <td>
                                                    <% if (producto.activo) { %>
                                                        <span class="badge bg-success">Activo</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">Inactivo</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/admin/producto/editar/<%= producto.id %>" 
                                                           class="btn btn-sm btn-warning" title="Editar">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <% if (producto.activo) { %>
                                                            <button type="button" class="btn btn-sm btn-danger" 
                                                                    onclick="cambiarEstado(<%= producto.id %>, false)"
                                                                    title="Desactivar">
                                                                <i class="bi bi-x-circle"></i>
                                                            </button>
                                                        <% } else { %>
                                                            <button type="button" class="btn btn-sm btn-success" 
                                                                    onclick="cambiarEstado(<%= producto.id %>, true)"
                                                                    title="Activar">
                                                                <i class="bi bi-check-circle"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación -->
    <div class="modal fade" id="modalConfirmacion" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Acción</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="mensajeModal"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="btnConfirmar">Confirmar</button>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        let productoIdSeleccionado = null;
        let nuevoEstado = null;

        function cambiarEstado(productoId, activar) {
            productoIdSeleccionado = productoId;
            nuevoEstado = activar;
            
            const mensaje = activar 
                ? '¿Está seguro de que desea activar este producto?' 
                : '¿Está seguro de que desea desactivar este producto?';
            
            document.getElementById('mensajeModal').textContent = mensaje;
            
            const modal = new bootstrap.Modal(document.getElementById('modalConfirmacion'));
            modal.show();
        }

        document.getElementById('btnConfirmar').addEventListener('click', function() {
            if (productoIdSeleccionado !== null && nuevoEstado !== null) {
                // Crear formulario y enviarlo
                const form = document.createElement('form');
                form.method = 'POST';
                form.action = `/admin/producto/${productoIdSeleccionado}/cambiar-estado`;
                
                const inputActivo = document.createElement('input');
                inputActivo.type = 'hidden';
                inputActivo.name = 'activo';
                inputActivo.value = nuevoEstado;
                
                form.appendChild(inputActivo);
                document.body.appendChild(form);
                form.submit();
            }
        });
    </script>
</body>
</html>



