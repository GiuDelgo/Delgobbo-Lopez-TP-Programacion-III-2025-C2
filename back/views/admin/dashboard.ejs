<%- include('../partials/head', { titulo: 'Dashboard' }) %>
<%- include('../partials/navbar', { usuario }) %>

    <div class="container-fluid mt-4">
        <div class="row">
            <%- include('../partials/sidebar', { activo: 'dashboard' }) %>

            <!-- Contenido Principal -->
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2><i class="bi bi-box-seam"></i> Gestión de Productos</h2>
                    <a href="/admin/producto/nuevo" class="btn btn-success">
                        <i class="bi bi-plus-lg"></i> Agregar Producto
                    </a>
                </div>

                <!-- Mensajes de éxito/error -->
                <% if (typeof mensaje !== 'undefined' && mensaje) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%= mensaje %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                    </div>
                <% } %>

                <!-- Tabla de Suplementos -->
                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h4 class="mb-0"><i class="bi bi-capsule"></i> Suplementos</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive ">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Imagen</th>
                                        <th>Nombre</th>
                                        <th>Marca</th>
                                        <th>Precio</th>
                                        <th>Cantidad (gr/ml)</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (suplementos.length === 0) { %>
                                        <tr>
                                            <td colspan="8" class="text-center text-muted">
                                                No hay suplementos registrados
                                            </td>
                                        </tr>
                                    <% } else { %>
                                        <% suplementos.forEach(producto => { %>
                                            <tr>
                                                <td><%= producto.id %></td>
                                                <td>
                                                    <% if (producto.imagen) { %>
                                                        <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>" 
                                                                style="width: 50px; height: 50px; object-fit: cover;">
                                                    <% } else { %>
                                                        <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                                                    <% } %>
                                                </td>
                                                <td><%= producto.nombre %></td>
                                                <td><%= producto.marca %></td>
                                                <td>$<%= producto.precio.toFixed(2) %></td>
                                                <td><%= producto.cantidad_gramos_ml %> gr/ml</td>
                                                <td>
                                                    <% if (producto.activo) { %>
                                                        <span class="badge bg-success">Activo</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">Inactivo</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/admin/producto/editar/<%= producto.id %>" 
                                                            class="btn btn-sm btn-warning" title="Editar">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <% if (producto.activo) { %>
                                                            <button type="button" class="btn btn-sm btn-danger" 
                                                                    onclick="cambiarEstado(<%= producto.id %>, false)"
                                                                    title="Desactivar">
                                                                <i class="bi bi-x-circle"></i>
                                                            </button>
                                                        <% } else { %>
                                                            <button type="button" class="btn btn-sm btn-success" 
                                                                    onclick="cambiarEstado(<%= producto.id %>, true)"
                                                                    title="Activar">
                                                                <i class="bi bi-check-circle"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>

                <!-- Tabla de Pesas -->
                <div class="card mb-4">
                    <div class="card-header bg-secondary text-white">
                        <h4 class="mb-0"><i class="bi bi-award"></i> Pesas</h4>
                    </div>
                    <div class="card-body">
                        <div class="table-responsive">
                            <table class="table table-hover">
                                <thead>
                                    <tr>
                                        <th>ID</th>
                                        <th>Imagen</th>
                                        <th>Nombre</th>
                                        <th>Marca</th>
                                        <th>Precio</th>
                                        <th>Peso (kg)</th>
                                        <th>Estado</th>
                                        <th>Acciones</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (pesas.length === 0) { %>
                                        <tr>
                                            <td colspan="8" class="text-center text-muted">
                                                No hay pesas registradas
                                            </td>
                                        </tr>
                                    <% } else { %>
                                        <% pesas.forEach(producto => { %>
                                            <tr>
                                                <td><%= producto.id %></td>
                                                <td>
                                                    <% if (producto.imagen) { %>
                                                        <img src="<%= producto.imagen %>" alt="<%= producto.nombre %>" 
                                                                style="width: 50px; height: 50px; object-fit: cover;">
                                                    <% } else { %>
                                                        <i class="bi bi-image text-muted" style="font-size: 2rem;"></i>
                                                    <% } %>
                                                </td>
                                                <td><%= producto.nombre %></td>
                                                <td><%= producto.marca %></td>
                                                <td>$<%= producto.precio.toFixed(2) %></td>
                                                <td><%= producto.peso %> kg</td>
                                                <td>
                                                    <% if (producto.activo) { %>
                                                        <span class="badge bg-success">Activo</span>
                                                    <% } else { %>
                                                        <span class="badge bg-danger">Inactivo</span>
                                                    <% } %>
                                                </td>
                                                <td>
                                                    <div class="btn-group" role="group">
                                                        <a href="/admin/producto/editar/<%= producto.id %>" 
                                                            class="btn btn-sm btn-warning" title="Editar">
                                                            <i class="bi bi-pencil"></i>
                                                        </a>
                                                        <% if (producto.activo) { %>
                                                            <button type="button" class="btn btn-sm btn-danger" 
                                                                    onclick="cambiarEstado(<%= producto.id %>, false)"
                                                                    title="Desactivar">
                                                                <i class="bi bi-x-circle"></i>
                                                            </button>
                                                        <% } else { %>
                                                            <button type="button" class="btn btn-sm btn-success" 
                                                                    onclick="cambiarEstado(<%= producto.id %>, true)"
                                                                    title="Activar">
                                                                <i class="bi bi-check-circle"></i>
                                                            </button>
                                                        <% } %>
                                                    </div>
                                                </td>
                                            </tr>
                                        <% }) %>
                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Modal de Confirmación -->
    <div class="modal fade" id="modalConfirmacion" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title">Confirmar Acción</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p id="mensajeModal"></p>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancelar</button>
                    <button type="button" class="btn btn-primary" id="btnConfirmar">Confirmar</button>
                </div>
            </div>
        </div>
    </div>

<%- include('../partials/scripts') %>



