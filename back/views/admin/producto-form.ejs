<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= esEdicion ? 'Editar' : 'Nuevo' %> Producto - Panel de Administración</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.0/font/bootstrap-icons.css">
    <link rel="stylesheet" href="/public/css/admin.css">
</head>
<body>
    <!-- Navbar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <a class="navbar-brand" href="/admin/dashboard">
                <i class="bi bi-shield-lock"></i> Panel de Administración - Papota Gym
            </a>
            <div class="d-flex">
                <span class="navbar-text text-light me-3">
                    <i class="bi bi-person-circle"></i> <%= usuario.nombre %>
                </span>
                <a href="/admin/logout" class="btn btn-outline-light btn-sm">
                    <i class="bi bi-box-arrow-right"></i> Cerrar Sesión
                </a>
            </div>
        </div>
    </nav>

    <div class="container-fluid mt-4">
        <div class="row">
            <!-- Sidebar -->
            <div class="col-md-2 bg-light sidebar">
                <div class="list-group list-group-flush">
                    <a href="/admin/dashboard" class="list-group-item list-group-item-action">
                        <i class="bi bi-speedometer2"></i> Dashboard
                    </a>
                    <a href="/admin/producto/nuevo" class="list-group-item list-group-item-action active">
                        <i class="bi bi-plus-circle"></i> Nuevo Producto
                    </a>
                </div>
            </div>

            <!-- Contenido Principal -->
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>
                        <i class="bi bi-<%= esEdicion ? 'pencil' : 'plus-circle' %>"></i>
                        <%= esEdicion ? 'Editar' : 'Nuevo' %> Producto
                    </h2>
                    <a href="/admin/dashboard" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver al Dashboard
                    </a>
                </div>

                <div class="card">
                    <div class="card-body">
                        <form action="/admin/producto/guardar<%= esEdicion ? '/' + producto.id : '' %>" 
                              method="POST" id="formProducto">
                            
                            <!-- Tipo de Producto -->
                            <div class="mb-3">
                                <label for="tipo_producto" class="form-label">
                                    <i class="bi bi-tag"></i> Tipo de Producto *
                                </label>
                                <select class="form-select" id="tipo_producto" name="tipo_producto" required 
                                        onchange="cambiarTipoProducto()">
                                    <option value="">Seleccione un tipo</option>
                                    <option value="Suplemento" <%= producto && producto.tipo_producto === 'Suplemento' ? 'selected' : '' %>>
                                        Suplemento
                                    </option>
                                    <option value="Pesa" <%= producto && producto.tipo_producto === 'Pesa' ? 'selected' : '' %>>
                                        Pesa
                                    </option>
                                </select>
                            </div>

                            <div class="row">
                                <!-- Nombre -->
                                <div class="col-md-6 mb-3">
                                    <label for="nombre" class="form-label">
                                        <i class="bi bi-box"></i> Nombre del Producto *
                                    </label>
                                    <input type="text" class="form-control" id="nombre" name="nombre" 
                                           value="<%= producto ? producto.nombre : '' %>" 
                                           placeholder="Ej: Proteína Whey" required>
                                </div>

                                <!-- Marca -->
                                <div class="col-md-6 mb-3">
                                    <label for="marca" class="form-label">
                                        <i class="bi bi-award"></i> Marca *
                                    </label>
                                    <input type="text" class="form-control" id="marca" name="marca" 
                                           value="<%= producto ? producto.marca : '' %>" 
                                           placeholder="Ej: NutriMax" required>
                                </div>
                            </div>

                            <div class="row">
                                <!-- Precio -->
                                <div class="col-md-4 mb-3">
                                    <label for="precio" class="form-label">
                                        <i class="bi bi-currency-dollar"></i> Precio *
                                    </label>
                                    <input type="number" class="form-control" id="precio" name="precio" 
                                           value="<%= producto ? producto.precio : '' %>" 
                                           step="0.01" min="0" placeholder="0.00" required>
                                </div>

                                <!-- Peso (solo para Pesas) -->
                                <div class="col-md-4 mb-3" id="campo-peso" style="display: none;">
                                    <label for="peso" class="form-label">
                                        <i class="bi bi-speedometer"></i> Peso (kg) *
                                    </label>
                                    <input type="number" class="form-control" id="peso" name="peso" 
                                           value="<%= producto && producto.peso ? producto.peso : '' %>" 
                                           step="0.01" min="0" placeholder="0.00">
                                </div>

                                <!-- Cantidad (solo para Suplementos) -->
                                <div class="col-md-4 mb-3" id="campo-cantidad" style="display: none;">
                                    <label for="cantidad_gramos_ml" class="form-label">
                                        <i class="bi bi-droplet"></i> Cantidad (gr/ml) *
                                    </label>
                                    <input type="number" class="form-control" id="cantidad_gramos_ml" 
                                           name="cantidad_gramos_ml" 
                                           value="<%= producto && producto.cantidad_gramos_ml ? producto.cantidad_gramos_ml : '' %>" 
                                           min="0" placeholder="0">
                                </div>
                            </div>

                            <!-- URL de Imagen -->
                            <div class="mb-3">
                                <label for="imagen" class="form-label">
                                    <i class="bi bi-image"></i> URL de la Imagen
                                </label>
                                <input type="url" class="form-control" id="imagen" name="imagen" 
                                       value="<%= producto && producto.imagen ? producto.imagen : '' %>" 
                                       placeholder="https://ejemplo.com/imagen.jpg">
                                <small class="form-text text-muted">
                                    Ingrese la URL completa de la imagen del producto
                                </small>
                            </div>

                            <!-- Vista previa de imagen -->
                            <div class="mb-3" id="preview-container" style="display: none;">
                                <label class="form-label">Vista Previa:</label>
                                <div>
                                    <img id="imagen-preview" src="" alt="Vista previa" 
                                         style="max-width: 200px; max-height: 200px; object-fit: cover; border: 1px solid #ddd; border-radius: 5px;">
                                </div>
                            </div>

                            <hr class="my-4">

                            <!-- Botones -->
                            <div class="d-flex justify-content-between">
                                <a href="/admin/dashboard" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> 
                                    <%= esEdicion ? 'Guardar Cambios' : 'Crear Producto' %>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Función para mostrar/ocultar campos según el tipo de producto
        function cambiarTipoProducto() {
            const tipo = document.getElementById('tipo_producto').value;
            const campoPeso = document.getElementById('campo-peso');
            const campoCantidad = document.getElementById('campo-cantidad');
            const inputPeso = document.getElementById('peso');
            const inputCantidad = document.getElementById('cantidad_gramos_ml');

            if (tipo === 'Pesa') {
                campoPeso.style.display = 'block';
                campoCantidad.style.display = 'none';
                inputPeso.required = true;
                inputCantidad.required = false;
                inputCantidad.value = '';
            } else if (tipo === 'Suplemento') {
                campoPeso.style.display = 'none';
                campoCantidad.style.display = 'block';
                inputPeso.required = false;
                inputCantidad.required = true;
                inputPeso.value = '';
            } else {
                campoPeso.style.display = 'none';
                campoCantidad.style.display = 'none';
                inputPeso.required = false;
                inputCantidad.required = false;
            }
        }

        // Vista previa de imagen
        document.getElementById('imagen').addEventListener('input', function() {
            const url = this.value;
            const preview = document.getElementById('imagen-preview');
            const container = document.getElementById('preview-container');

            if (url) {
                preview.src = url;
                container.style.display = 'block';
                
                // Ocultar si la imagen no carga
                preview.onerror = function() {
                    container.style.display = 'none';
                };
            } else {
                container.style.display = 'none';
            }
        });

        // Ejecutar al cargar la página
        document.addEventListener('DOMContentLoaded', function() {
            cambiarTipoProducto();
            
            // Mostrar vista previa si hay imagen
            const imagenInput = document.getElementById('imagen');
            if (imagenInput.value) {
                imagenInput.dispatchEvent(new Event('input'));
            }
        });
    </script>
</body>
</html>



