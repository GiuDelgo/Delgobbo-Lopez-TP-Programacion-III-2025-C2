<%- include('../partials/head', { titulo: (esEdicion ? 'Editar' : 'Nuevo') + ' Producto' }) %>
<%- include('../partials/navbar', { usuario }) %>

    <div class="container-fluid mt-4">
        <div class="row">
            <%- include('../partials/sidebar', { activo: 'nuevo' }) %>

            <!-- Contenido Principal -->
            <div class="col-md-10">
                <div class="d-flex justify-content-between align-items-center mb-4">
                    <h2>
                        <i class="bi bi-<%= esEdicion ? 'pencil' : 'plus-circle' %>"></i>
                        <%= esEdicion ? 'Editar' : 'Nuevo' %> Producto
                    </h2>
                    <a href="/admin/dashboard" class="btn btn-secondary">
                        <i class="bi bi-arrow-left"></i> Volver al Dashboard
                    </a>
                </div>

                <div class="card">
                    <div class="card-body">
                        <form action="/admin/producto/guardar<%= esEdicion ? '/' + producto.id : '' %>" 
                                method="POST" id="formProducto" enctype="multipart/form-data">                            
                            <!-- Tipo de Producto -->
                            <div class="mb-3">
                                <label for="tipo_producto" class="form-label">
                                    <i class="bi bi-tag"></i> Tipo de Producto *
                                </label>
                                <select class="form-select" id="tipo_producto" name="tipo_producto" required 
                                        onchange="cambiarTipoProducto()">
                                    <option value="">Seleccione un tipo</option>
                                    <option value="Suplemento" <%= producto && producto.tipo_producto === 'Suplemento' ? 'selected' : '' %>>
                                        Suplemento
                                    </option>
                                    <option value="Pesa" <%= producto && producto.tipo_producto === 'Pesa' ? 'selected' : '' %>>
                                        Pesa
                                    </option>
                                </select>
                            </div>

                            <div class="row">
                                <!-- Nombre -->
                                <div class="col-md-6 mb-3">
                                    <label for="nombre" class="form-label">
                                        <i class="bi bi-box"></i> Nombre del Producto *
                                    </label>
                                    <input type="text" class="form-control" id="nombre" name="nombre" 
                                            value="<%= producto ? producto.nombre : '' %>" 
                                            placeholder="Ej: ProteÃ­na Whey" required>
                                </div>

                                <!-- Marca -->
                                <div class="col-md-6 mb-3">
                                    <label for="marca" class="form-label">
                                        <i class="bi bi-award"></i> Marca *
                                    </label>
                                    <input type="text" class="form-control" id="marca" name="marca" 
                                            value="<%= producto ? producto.marca : '' %>" 
                                            placeholder="Ej: NutriMax" required>
                                </div>
                            </div>

                            <div class="row">
                                <!-- Precio -->
                                <div class="col-md-4 mb-3">
                                    <label for="precio" class="form-label">
                                        <i class="bi bi-currency-dollar"></i> Precio *
                                    </label>
                                    <input type="number" class="form-control" id="precio" name="precio" 
                                            value="<%= producto ? producto.precio : '' %>" 
                                            step="0.01" min="0" placeholder="0.00" required>
                                </div>

                                <!-- Peso (solo para Pesas) -->
                                <div class="col-md-4 mb-3" id="campo-peso" style="display: none;">
                                    <label for="peso" class="form-label">
                                        <i class="bi bi-speedometer"></i> Peso (kg) *
                                    </label>
                                    <input type="number" class="form-control" id="peso" name="peso" 
                                            value="<%= producto && producto.peso ? producto.peso : '' %>" 
                                            step="0.01" min="0" placeholder="0.00">
                                </div>

                                <!-- Cantidad (solo para Suplementos) -->
                                <div class="col-md-4 mb-3" id="campo-cantidad" style="display: none;">
                                    <label for="cantidad_gramos_ml" class="form-label">
                                        <i class="bi bi-droplet"></i> Cantidad (gr/ml) *
                                    </label>
                                    <input type="number" class="form-control" id="cantidad_gramos_ml" 
                                            name="cantidad_gramos_ml" 
                                            value="<%= producto && producto.cantidad_gramos_ml ? producto.cantidad_gramos_ml : '' %>" 
                                            min="0" placeholder="0">
                                </div>
                            </div>

                            <!-- File de Imagen -->
                            <div class="mb-3">
                                <label for="imagen" class="form-label">
                                    <i class="bi bi-image"></i> Imagen del Producto
                                </label>
                                <input type="file" class="form-control" id="imagen" name="imgProducto" 
                                        value="<%= producto && producto.imagen ? producto.imagen : '' %>" 
                                        accept="image/png, image/jpg, image/jpeg">
                                <small class="form-text text-muted">
                                    Seleccione la imagen del producto
                                </small>
                            </div>

                            <!-- Vista previa de imagen -->
                            <div class="mb-3" id="preview-container" style="display: none;">
                                <label class="form-label">Vista Previa:</label>
                                <div>
                                    <img id="imagen-preview" src="" alt="Vista previa" 
                                            style="max-width: 200px; max-height: 200px; object-fit: cover; border: 1px solid #ddd; border-radius: 5px;">
                                </div>
                            </div>

                            <hr class="my-4">

                            <!-- Botones -->
                            <div class="d-flex justify-content-between">
                                <a href="/admin/dashboard" class="btn btn-secondary">
                                    <i class="bi bi-x-circle"></i> Cancelar
                                </a>
                                <button type="submit" class="btn btn-success">
                                    <i class="bi bi-check-circle"></i> 
                                    <%= esEdicion ? 'Guardar Cambios' : 'Crear Producto' %>
                                </button>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>

<%- include('../partials/scripts') %>



