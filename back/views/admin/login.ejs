<%- include('../partials/head', { titulo: 'Login' }) %>
    <div class="login-card">
        <div class="login-header">
            <i class="bi bi-shield-lock" style="font-size: 3rem;"></i>
            <h2 class="mt-3 mb-0">Panel de Administración</h2>
            <p class="mb-0">Papota Gym</p>
        </div>
        <div class="login-body">
            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <i class="bi bi-exclamation-triangle"></i> <%= error %>
                    <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                </div>
            <% } %>

            <form action="/admin/login" method="POST" id="loginForm">
                <div class="mb-3">
                    <label for="correo" class="form-label text-dark">
                        <i class="bi bi-envelope"></i> Correo Electrónico
                    </label>
                    <input type="email" class="form-control" id="correo" name="correo" 
                            placeholder="admin@papota.com" required>
                </div>

                <div class="mb-4">
                    <label for="contraseña" class="form-label text-dark">
                        <i class="bi bi-lock"></i> Contraseña
                    </label>
                    <input type="password" class="form-control" id="contraseña" name="contraseña" 
                            placeholder="••••••••" required>
                </div>

                <button type="submit" class="btn btn-login w-100 mb-3">
                    <i class="bi bi-box-arrow-in-right"></i> Iniciar Sesión
                </button>

                <button type="button" class="btn btn-quick-access w-100" 
                        id="btnAccesoRapido">
                    <i class="bi bi-lightning-charge"></i> Acceso Rápido (Testing)
                </button>
            </form>

            <div class="text-center mt-4">
                <small class="text-muted">
                    <i class="bi bi-info-circle"></i> 
                    El botón de acceso rápido autocompleta las credenciales para facilitar las pruebas
                </small>
            </div>
        </div>
    </div>

<%- include('../partials/scripts') %>



